{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",

		"sourceMap": true,
		"declaration": true,
		"noEmitOnError": false,

		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strict": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"importHelpers": true,
		"allowSyntheticDefaultImports": false,
		"downlevelIteration": true,
		"moduleResolution": "node"
	},
	"include": [
		"../packages/**/*.ts",
		"../examples/**/*.ts",
		"../packages/**/*.tsx",
		"../examples/**/*.tsx"
	],
	"exclude": [
		"../**/build"
	]
}
